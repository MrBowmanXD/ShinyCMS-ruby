<% return unless current_user.can? :list, :shiny_shop %>

  <%= render_admin_menu_section( t( 'shiny_shop.admin.shiny_shop.title' ), 'rss' ) do %>

    <%= render_admin_menu_item(
        t( 'shiny_shop.admin.shiny_shop.index.title' ), shiny_shop.shiny_shop_path, 'list' ) %>

    <%= render_admin_menu_item_if( current_user.can?( :add, :shiny_shop ),
        t( 'shiny_shop.admin.shiny_shop.new.title' ), shiny_shop.new_shiny_shop_path, 'pencil' ) %>

<% end %>
